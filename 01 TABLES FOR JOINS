INSERT INTO book (id, author_id, title, publish_year, publishing_house, rating) VALUES (6, 3, 'Echoes Of Time', 2010, 'Sunrise Publishers', 4.1);

-- CREAR TABLA adaptation
CREATE TABLE adaptation (
    book_id NUMBER REFERENCES book(id),
    type VARCHAR2(50),
    title VARCHAR2(200),
    release_year NUMBER(4),
    rating NUMBER(3,1)
);

-- Insertar datos en adaptation
INSERT INTO adaptation (book_id, type, title, release_year, rating) VALUES (1, 'movie', 'Gone With The Wolves: The Beginning', 2008, 3);
INSERT INTO adaptation (book_id, type, title, release_year, rating) VALUES (3, 'movie', 'Companions Of Tomorrow', 2001, 4.2);
