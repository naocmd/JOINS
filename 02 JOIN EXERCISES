--Ejercicio 1: Mostrar productos de menos de 150 calor√≠as y su departamento

SELECT CALORIES, PRODUCT.NAME, DEPARTMENT.ID
FROM DEPARTMENT
INNER JOIN PRODUCT ON DEPARTMENT.ID = PRODUCT.DEPARTMENT_ID 
INNER JOIN NUTRITION_DATA ON NUTRITION_DATA.PRODUCT_ID = PRODUCT.ID
WHERE CALORIES < 150;

--Ejercicio 2: Listar todos los productos con sus productores, 
--departamentos y carbohidratos

SELECT PRODUCT.NAME , DEPARTMENT.NAME, PRODUCER.NAME, NUTRITION_DATA.CARBOHYDRATE
FROM PRODUCT --ES FROM PRODUCT PARA MOSTRAR TODOS LOS PRODUCTOS
LEFT JOIN PRODUCER ON PRODUCER.ID = PRODUCT.PRODUCER_ID
LEFT JOIN DEPARTMENT ON DEPARTMENT.ID = PRODUCT.DEPARTMENT_ID
LEFT JOIN NUTRITION_DATA ON NUTRITION_DATA.PRODUCT_ID = PRODUCT.ID;
